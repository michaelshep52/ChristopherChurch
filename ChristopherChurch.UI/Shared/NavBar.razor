@inject NavigationManager NavigationManager

<nav class="navbar navbar-dark">
    <div class="row w-100">
        <div class="toggle-box col-1">
            <button class="navbar-toggler" @onclick="ToggleMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="col-9">
            <a class="navbar-brand mx-auto" href="#">
                <img src="https://raw.githubusercontent.com/michaelshep52/CCOGPictures/main/DarkLogo.jpg" alt="Logo" class="logo-img">
            </a>
        </div>
        <div class="col-12">
            <div class="collapse navbar-collapse" style="display: @(isMenuOpen ? "block" : "none")">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="() => ToggleMenu()">
                            <span class="oi oi-home" aria-hidden="true"></span> Home
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="events" @onclick="() => ToggleMenu()">
                            <span class="oi oi-calendar" aria-hidden="true"></span> Events
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="Ministries" @onclick="() => ToggleMenu()">
                            <span class="oi oi-clipboard" aria-hidden="true"></span> Ministries
                        </NavLink>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>

@code {
    private bool isMenuOpen = false;

        private void ToggleMenu()
        {
            isMenuOpen = !isMenuOpen;
        }

    }